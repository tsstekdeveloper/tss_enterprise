<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Kanban View -->
    <record id="view_technical_service_dashboard_kanban" model="ir.ui.view">
        <field name="name">technical.service.dashboard.kanban</field>
        <field name="model">maintenance.request</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard" create="false">
                <field name="id"/>
                <field name="name"/>
                <field name="stage_id"/>
                <field name="x_priority_level"/>
                <field name="x_sla_status"/>
                <field name="x_resolution_time"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="name"/>
                                    </div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <span class="text-muted">Stage:</span>
                                        <field name="stage_id"/>
                                    </div>
                                    <div class="col-6">
                                        <span class="text-muted">Priority:</span>
                                        <field name="x_priority_level"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Graph View for Analysis -->
    <record id="view_technical_service_graph" model="ir.ui.view">
        <field name="name">technical.service.graph</field>
        <field name="model">maintenance.request</field>
        <field name="arch" type="xml">
            <graph string="Service Request Analysis" type="bar" stacked="True">
                <field name="stage_id" type="row"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View for Analysis -->
    <record id="view_technical_service_pivot" model="ir.ui.view">
        <field name="name">technical.service.pivot</field>
        <field name="model">maintenance.request</field>
        <field name="arch" type="xml">
            <pivot string="Service Request Analysis">
                <field name="x_service_category" type="row"/>
                <field name="stage_id" type="col"/>
                <field name="x_resolution_time" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_technical_service_calendar" model="ir.ui.view">
        <field name="name">technical.service.calendar</field>
        <field name="model">maintenance.request</field>
        <field name="arch" type="xml">
            <calendar string="Service Schedule" date_start="schedule_date" color="stage_id" mode="month" quick_create="False">
                <field name="name"/>
                <field name="maintenance_team_id"/>
                <field name="priority"/>
            </calendar>
        </field>
    </record>

    <!-- Team Performance Dashboard -->
    <record id="view_team_performance_kanban" model="ir.ui.view">
        <field name="name">team.performance.kanban</field>
        <field name="model">maintenance.team</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard" create="false">
                <field name="name"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_card">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary"><field name="name"/></div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row mt-3">
                                    <div class="col-12 text-center">
                                        <span class="text-muted">Team Dashboard</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>