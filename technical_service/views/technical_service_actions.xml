<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Priority Action -->
    <record id="action_technical_service_priority" model="ir.actions.act_window">
        <field name="name">Priorities</field>
        <field name="res_model">technical.service.priority</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new priority level
            </p>
        </field>
    </record>

    <!-- Invoice Action -->
    <record id="action_technical_service_invoice" model="ir.actions.act_window">
        <field name="name">Service Invoices</field>
        <field name="res_model">technical.service.invoice</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new service invoice
            </p>
        </field>
    </record>

    <!-- Satisfaction Survey Action -->
    <record id="action_technical_service_satisfaction" model="ir.actions.act_window">
        <field name="name">Customer Satisfaction</field>
        <field name="res_model">technical.service.satisfaction.survey</field>
        <field name="view_mode">list,form,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new satisfaction survey
            </p>
        </field>
    </record>

    <!-- Knowledge Base Action -->
    <record id="action_technical_service_knowledge" model="ir.actions.act_window">
        <field name="name">Knowledge Base</field>
        <field name="res_model">technical.service.knowledge.base</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a knowledge base article
            </p>
        </field>
    </record>

    <!-- Inventory Action -->
    <record id="action_technical_service_inventory" model="ir.actions.act_window">
        <field name="name">Parts Inventory</field>
        <field name="res_model">technical.service.inventory</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new part to inventory
            </p>
        </field>
    </record>

    <!-- Preventive Maintenance Action -->
    <record id="action_technical_service_preventive" model="ir.actions.act_window">
        <field name="name">Preventive Maintenance</field>
        <field name="res_model">technical.service.preventive.maintenance</field>
        <field name="view_mode">calendar,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a preventive maintenance schedule
            </p>
        </field>
    </record>

    <!-- Dashboard Actions -->
    <record id="action_technical_service_dashboard" model="ir.actions.act_window">
        <field name="name">Service Dashboard</field>
        <field name="res_model">maintenance.request</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_current': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Technical Service Dashboard
            </p>
            <p>Monitor all service requests and their status</p>
        </field>
    </record>

    <record id="action_technical_service_team_dashboard" model="ir.actions.act_window">
        <field name="name">Team Dashboard</field>
        <field name="res_model">maintenance.team</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Team Performance Dashboard
            </p>
        </field>
    </record>

    <!-- Report and Analysis Actions -->
    <record id="action_technical_service_request_analysis" model="ir.actions.act_window">
        <field name="name">Request Analysis</field>
        <field name="res_model">maintenance.request</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="context">{'group_by': ['state', 'priority']}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Service Request Analysis
            </p>
        </field>
    </record>

    <record id="action_technical_service_sla_performance" model="ir.actions.act_window">
        <field name="name">SLA Performance</field>
        <field name="res_model">maintenance.request</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="domain">[('sla_id', '!=', False)]</field>
        <field name="context">{'group_by': ['sla_id', 'sla_status']}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                SLA Performance Analysis
            </p>
        </field>
    </record>

    <record id="action_technical_service_team_performance" model="ir.actions.act_window">
        <field name="name">Team Performance</field>
        <field name="res_model">maintenance.request</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="domain">[('team_id', '!=', False)]</field>
        <field name="context">{'group_by': ['team_id', 'state']}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Team Performance Report
            </p>
        </field>
    </record>

    <record id="action_technical_service_asset_analysis" model="ir.actions.act_window">
        <field name="name">Asset Analysis</field>
        <field name="res_model">maintenance.equipment</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="context">{'group_by': ['category', 'status']}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Asset Service Analysis
            </p>
        </field>
    </record>

    <record id="action_technical_service_work_order_analysis" model="ir.actions.act_window">
        <field name="name">Work Order Analysis</field>
        <field name="res_model">technical_service.work_order</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="context">{'group_by': ['x_work_status', 'x_work_type']}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Work Order Analysis
            </p>
        </field>
    </record>

    <record id="action_technical_service_contract_analysis" model="ir.actions.act_window">
        <field name="name">Contract Analysis</field>
        <field name="res_model">technical_service.contract</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="context">{'group_by': ['state']}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Service Contract Analysis
            </p>
        </field>
    </record>

    <!-- Report Wizard Action -->
    <record id="action_technical_service_report_wizard" model="ir.actions.act_window">
        <field name="name">Generate Reports</field>
        <field name="res_model">technical.service.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>