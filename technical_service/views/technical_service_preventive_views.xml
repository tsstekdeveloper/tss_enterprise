<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_technical_service_preventive_form" model="ir.ui.view">
        <field name="name">technical.service.preventive.maintenance.form</field>
        <field name="model">technical.service.preventive.maintenance</field>
        <field name="arch" type="xml">
            <form string="Preventive Maintenance Plan">
                <header>
                    <button name="action_create_work_order" string="Create Work Order"
                            type="object" class="btn-primary"
                            invisible="state != 'active'"/>
                    <button name="action_suspend" string="Suspend"
                            type="object"
                            invisible="state != 'active'"/>
                    <button name="action_reactivate" string="Reactivate"
                            type="object" class="btn-primary"
                            invisible="state != 'suspended'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="active,suspended,expired"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Overdue"
                            bg_color="text-bg-danger"
                            invisible="not is_overdue"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Maintenance Plan Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group string="Asset &amp; Team">
                            <field name="asset_id" options="{'no_create': True}"/>
                            <field name="team_id" options="{'no_create': True}"/>
                        </group>
                        <group string="Schedule">
                            <field name="frequency"/>
                            <field name="custom_frequency_days"
                                   invisible="frequency != 'custom'"/>
                            <field name="start_date"/>
                            <field name="next_maintenance_date" readonly="1"/>
                            <field name="last_maintenance_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Maintenance Details" name="details">
                            <group>
                                <group string="Task Information">
                                    <field name="maintenance_type"/>
                                    <field name="estimated_duration" widget="float_time"/>
                                </group>
                                <group string="Statistics">
                                    <field name="maintenance_count" readonly="1"/>
                                    <field name="is_overdue" invisible="1"/>
                                </group>
                            </group>
                            <separator string="Task Description"/>
                            <field name="task_description" widget="text"/>
                            <separator string="Maintenance Checklist"/>
                            <field name="checklist" widget="text"
                                   placeholder="- Check oil level&#10;- Inspect belts&#10;- Test safety systems..."/>
                        </page>
                        <page string="Resources" name="resources">
                            <group>
                                <separator string="Required Parts/Materials"/>
                                <field name="required_parts" widget="text" nolabel="1"
                                       placeholder="List required spare parts and consumables..."/>
                                <separator string="Special Tools Required"/>
                                <field name="special_tools" widget="text" nolabel="1"
                                       placeholder="List any special tools or equipment needed..."/>
                                <separator string="Safety Precautions"/>
                                <field name="safety_precautions" widget="text" nolabel="1"
                                       placeholder="Important safety considerations and PPE requirements..."/>
                            </group>
                        </page>
                        <page string="Work Orders" name="work_orders">
                            <field name="work_order_ids" readonly="1">
                                <list>
                                    <field name="title"/>
                                    <field name="x_work_status"/>
                                    <field name="x_scheduled_date"/>
                                    <field name="x_technician_id"/>
                                    <field name="x_actual_duration" widget="float_time"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notifications" name="notifications">
                            <group>
                                <group string="Notification Settings">
                                    <field name="notify_days_before"/>
                                    <field name="notify_team"/>
                                    <field name="notify_customer"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_technical_service_preventive_list" model="ir.ui.view">
        <field name="name">technical.service.preventive.maintenance.list</field>
        <field name="model">technical.service.preventive.maintenance</field>
        <field name="arch" type="xml">
            <list string="Preventive Maintenance Plans"
                  decoration-danger="is_overdue"
                  decoration-muted="state == 'suspended'">
                <field name="name"/>
                <field name="asset_id"/>
                <field name="frequency"/>
                <field name="next_maintenance_date"/>
                <field name="maintenance_type"/>
                <field name="team_id"/>
                <field name="state"/>
                <field name="is_overdue" invisible="1"/>
                <field name="maintenance_count" sum="Total"/>
            </list>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_technical_service_preventive_kanban" model="ir.ui.view">
        <field name="name">technical.service.preventive.maintenance.kanban</field>
        <field name="model">technical.service.preventive.maintenance</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="asset_id"/>
                <field name="next_maintenance_date"/>
                <field name="is_overdue"/>
                <field name="state"/>
                <field name="maintenance_count"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top mb-0">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="asset_id"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="text-muted">
                                    <i class="fa fa-calendar" title="Next Maintenance"/>
                                    <field name="next_maintenance_date"/>
                                </div>
                                <div t-if="record.is_overdue.raw_value" class="text-danger mt-1">
                                    <i class="fa fa-exclamation-triangle"/> Overdue
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge text-bg-info">
                                        <field name="maintenance_count"/> done
                                    </span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="frequency" widget="badge"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_technical_service_preventive_search" model="ir.ui.view">
        <field name="name">technical.service.preventive.maintenance.search</field>
        <field name="model">technical.service.preventive.maintenance</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="asset_id"/>
                <field name="team_id"/>
                <filter name="active" string="Active"
                        domain="[('state', '=', 'active')]"/>
                <filter name="this_month" string="Due This Month"
                        domain="[('next_maintenance_date', '&gt;=', context_today().strftime('%Y-%m-01')),
                                ('next_maintenance_date', '&lt;', (context_today() + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <separator/>
                <filter name="suspended" string="Suspended"
                        domain="[('state', '=', 'suspended')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_frequency" string="Frequency"
                            context="{'group_by': 'frequency'}"/>
                    <filter name="group_by_type" string="Maintenance Type"
                            context="{'group_by': 'maintenance_type'}"/>
                    <filter name="group_by_team" string="Team"
                            context="{'group_by': 'team_id'}"/>
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>