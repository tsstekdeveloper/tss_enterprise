<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Campus List View -->
    <record id="view_technical_service_campus_list" model="ir.ui.view">
        <field name="name">technical.service.campus.list</field>
        <field name="model">technical_service.campus</field>
        <field name="arch" type="xml">
            <list string="Campuses" create="1" edit="1">
                <field name="name"/>
                <field name="code"/>
                <field name="address"/>
                <field name="city"/>
                <field name="country_id"/>
                <field name="building_count"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Campus Form View -->
    <record id="view_technical_service_campus_form" model="ir.ui.view">
        <field name="name">technical.service.campus.form</field>
        <field name="model">technical_service.campus</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived"
                            bg_color="text-bg-danger"
                            invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Campus Name..."/>
                        </h1>
                        <h3>
                            <field name="code" placeholder="CAMP-001"/>
                        </h3>
                    </div>
                    <group>
                        <group string="Location">
                            <field name="address"/>
                            <field name="city"/>
                            <field name="state_id"/>
                            <field name="country_id"/>
                            <field name="zip"/>
                        </group>
                        <group string="Contact">
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="manager_id"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Buildings" name="buildings">
                            <field name="building_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="building_type"/>
                                    <field name="floor_count"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>

    <!-- Building List View -->
    <record id="view_technical_service_building_list" model="ir.ui.view">
        <field name="name">technical.service.building.list</field>
        <field name="model">technical_service.building</field>
        <field name="arch" type="xml">
            <list string="Buildings" create="1" edit="1">
                <field name="name"/>
                <field name="code"/>
                <field name="campus_id"/>
                <field name="building_type"/>
                <field name="floor_count"/>
                <field name="total_area"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Building Form View -->
    <record id="view_technical_service_building_form" model="ir.ui.view">
        <field name="name">technical.service.building.form</field>
        <field name="model">technical_service.building</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived"
                            bg_color="text-bg-danger"
                            invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Building Name..."/>
                        </h1>
                        <h3>
                            <field name="code" placeholder="BLDG-001"/>
                        </h3>
                    </div>
                    <group>
                        <group string="General Information">
                            <field name="campus_id" required="1"/>
                            <field name="building_type"/>
                            <field name="floor_count"/>
                            <field name="total_area"/>
                        </group>
                        <group string="Management">
                            <field name="manager_id"/>
                            <field name="maintenance_team_id"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Floors &amp; Rooms" name="floors">
                            <field name="floor_list" widget="html"
                                   placeholder="List floors and main areas..."/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_technical_service_campus" model="ir.actions.act_window">
        <field name="name">Campuses</field>
        <field name="res_model">technical_service.campus</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'default_active': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define your campus locations!
            </p>
        </field>
    </record>

    <record id="action_technical_service_building" model="ir.actions.act_window">
        <field name="name">Buildings</field>
        <field name="res_model">technical_service.building</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'default_active': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register your buildings!
            </p>
        </field>
    </record>
</odoo>