<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Missing Actions for Complete Menu Structure -->

        <!-- Tüm Talepler Action -->
        <record id="action_maintenance_request_all" model="ir.actions.act_window">
            <field name="name">Tüm Talepler</field>
            <field name="res_model">maintenance.request</field>
            <field name="view_mode">list,kanban,form,calendar,pivot</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>

        <!-- Yeni İş Emri Action -->
        <record id="action_work_order_new" model="ir.actions.act_window">
            <field name="name">Yeni İş Emri</field>
            <field name="res_model">technical_service.work_order</field>
            <field name="view_mode">form</field>
            <field name="context">{'default_state': 'draft'}</field>
        </record>

        <!-- Malzeme Talepleri Action (fixed) -->
        <record id="action_inventory_requests" model="ir.actions.act_window">
            <field name="name">Malzeme Talepleri</field>
            <field name="res_model">stock.picking</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'default_picking_type_id': 5}</field>
        </record>

        <!-- Genel Ayarlar Action -->
        <record id="action_technical_service_general_config" model="ir.actions.act_window">
            <field name="name">Genel Ayarlar</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module': 'technical_service'}</field>
        </record>

        <!-- Kullanıcı Yönetimi Action -->
        <record id="action_user_management" model="ir.actions.act_window">
            <field name="name">Kullanıcı Yönetimi</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="context">{'search_default_no_share': 1}</field>
        </record>

    </data>
</odoo>